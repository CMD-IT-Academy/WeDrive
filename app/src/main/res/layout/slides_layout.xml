<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <ImageView
        android:paddingTop="17dp"
        android:layout_weight="2"
        android:id="@+id/slider_image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/hand_booking_online"
        app:layout_constraintBottom_toTopOf="@+id/liner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        app:layout_constraintHorizontal_bias="0.2"
        android:id="@+id/liner"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slider_image">

        <TextView
            android:id="@+id/slider_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gibson_regular"
            android:text="@string/first_slide_title"
            android:textColor="#99000000"
            android:textSize="40sp"
            android:textStyle="normal"
            app:layout_constraintTop_toBottomOf="@+id/slider_image" />

        <TextView
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:id="@+id/slider_desc_n1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial_round"
            android:text="@string/first_slide_desc_n1"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:id="@+id/slider_desc_n2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial_round"
            android:text="@string/first_slide_desc_n2"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:id="@+id/slider_desc_n3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial_round"
            android:gravity="left"
            android:text="@string/first_slide_desc_n3"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>